{
  "name": "ipl/orm",
  "type": "library",
  "description": "Icinga PHP Library - ORM",
  "keywords": [
    "sql",
    "database",
    "orm"
  ],
  "homepage": "https://github.com/Icinga/ipl-orm",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/Icinga/ipl-stdlib",
      "no-api": true
    },
    {
      "type": "vcs",
      "url": "https://github.com/Icinga/ipl-sql",
      "no-api": true
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "ipl/sql": "dev-master",
    "ipl/stdlib": "dev-master",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7 || ^4.8",
    "squizlabs/php_codesniffer": "^2.9.1"
  },
  "autoload": {
    "psr-4": {
      "ipl\\Orm\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ipl\\Tests\\Orm\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --no-coverage",
    "test-dev": "vendor/bin/phpunit",
    "checkstyle": "vendor/bin/phpcs"
  }
}
